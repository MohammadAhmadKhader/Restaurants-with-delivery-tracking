{
    "MicroservicesUrls": {
      "AuthService": "http://localhost:5284",
      "OrdersService": "http://localhost:5281",
      "PaymentsService": "http://localhost:5206",
      "LocationsService": "http://localhost:5115",
      "RestaurantsService": "http://localhost:5029",
      "NotificationsService": "http://localhost:5090"
    },
    "Kafka":{
        "BootstrapServers":"127.0.0.1:9095",
        "Acks": "all",
        "MessageTimeoutMs": 5000,
        "RequestTimeoutMs": 5000
    },
    "Seq":"http://localhost:5341",
    "Serilog": {
        "OutputTemplate":"[{Timestamp:HH:mm:ss} {Level:u3}] ({ServiceName}) {Message:lj}{NewLine}{Exception}"
    },
    "Telemetry": {
        "Tracing": {
            "Sampler": {
              "Type": "AlwaysOn",
              "Ratio": 1.0
            },
            "OtlpExporter": {
              "Endpoint": "http://127.0.0.1:4317",
              "Protocol": "Grpc",
              "TimeoutMs": 30000
            },
            "Instrumentation": {
              "EnableAspNetCore": true,
              "EnableHttpClient": true,
              "EnableMassTransit": true
            }
        }
    }
}